#:import from_hex kivy.utils.get_color_from_hex

#:set d 15

<TipButton@Button>
	background_color: from_hex("#00800FFF")
	canvas:
		Color:
			rgba: from_hex("#0000FFFF")

<ColorButton@Button>
	background_color: (237/255,233/255,209/255,1)

<Painter>:
	Button:
		text: 'DEL'
		background_normal: 'background.jpeg'
		background_down: 'kleo geming.jpeg'
		right: root.right-10
		top: root.top-10
		width: 60
		height: 60
		on_release: root.clear_canvas()



	BoxLayout:
		orientation: 'horizontal'
		x : root.x + 20
		top : root.top - 20
		width: 180
		height: 60
		size_hint: (None, None)
		padding: 3
		spacing: 10


		TipButton:
			on_release: root.set_line_width(d/2)
			canvas:
				Ellipse:
					pos: (self.center_x-15/2, self.center_y-15/2)
					size: d, d

		TipButton:
			on_release: root.set_line_width(d)
			canvas:
				Ellipse:
					pos: (self.center_x-30/2, self.center_y-30/2)
					size: d+15, d+15

		TipButton:
			on_release: root.set_line_width(3*d/2)
			canvas:
				Ellipse:
					pos: (self.center_x-45/2, self.center_y-45/2)
					size: d+30, d+30

	BoxLayout:
		orientation: 'horizontal'
		x: 0
		y: 0
		width: root.width
		height: 60
		size_hint: (None, None) 
		
		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#FF0000FF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)
		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#00FF00FF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)	
		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#0000FFFF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)

		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#EB8034")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)

		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#000000")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)

		ColorButton:
			canvas:
				Color:
					rgba: from_hex("#964B00")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)